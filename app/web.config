<configuration>
  <system.webServer>
    <rewrite>
        <rules>
          <rule name="Redirect rquests to default azure websites domain" stopProcessing="true">
            <match url="(.*)" />
            <conditions logicalGrouping="MatchAny">
              <add input="{HTTP_HOST}" pattern="^leb-louise\.azurewebsites\.net$" />
            </conditions>
            <action type="Redirect" url="http://iamlouise.com/{R:0}" />
          </rule>
          <rule name="Redirect rquests to default azure websites domain" stopProcessing="true">
            <match url="(.*)" />
            <conditions logicalGrouping="MatchAny">
              <add input="{HTTPS_HOST}" pattern="^leb-louise\.azurewebsites\.net$" />
            </conditions>
            <action type="Redirect" url="https://iamlouise.com/{R:0}" />
          </rule>
        </rules>
    </rewrite>
  </system.webServer>
</configuration>
